<Window x:Class="ZipCrackerUI.CheckpointSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resume from Checkpoint"
        Height="450" Width="700"
        Background="{StaticResource PrimaryBrush}"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Border CornerRadius="12" Background="{StaticResource PrimaryBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="ðŸ“‚ Resume from Checkpoint"
                       FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentBrush}"
                       Margin="0,0,0,15"/>

            <!-- Description -->
            <TextBlock Grid.Row="1"
                       Text="Select a checkpoint to resume your previous password cracking session:"
                       FontSize="13"
                       Foreground="{StaticResource TextDimBrush}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>

            <!-- Checkpoint List -->
            <Border Grid.Row="2" Background="#0a0a1a" CornerRadius="8" BorderBrush="#2a2a4a" BorderThickness="1">
                <ListBox x:Name="lstCheckpoints"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionMode="Single"
                         MouseDoubleClick="LstCheckpoints_MouseDoubleClick"
                         Margin="5">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderBrush="{StaticResource AccentBrush}"
                                                BorderThickness="0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1a1a3a"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#2a2a4a"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Archive Name -->
                                <TextBlock Grid.Row="0"
                                           Text="{Binding ArchiveName}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}"/>

                                <!-- Details -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="Mode: " Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                                    <TextBlock Text="{Binding AttackMode}" Foreground="{StaticResource TextBrush}" FontSize="11" FontWeight="SemiBold" Margin="0,0,15,0"/>

                                    <TextBlock Text="CPU: " Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                                    <TextBlock Foreground="{StaticResource TextBrush}" FontSize="11" Margin="0,0,15,0">
                                        <Run Text="{Binding CpuProgress, StringFormat='{}{0:F1}%'}"/>
                                    </TextBlock>

                                    <TextBlock Text="GPU: " Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                                    <TextBlock Text="{Binding GpuProgress, StringFormat='{}{0}%'}" Foreground="{StaticResource TextBrush}" FontSize="11" Margin="0,0,15,0"/>

                                    <TextBlock Text="Elapsed: " Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                                    <TextBlock Foreground="{StaticResource TextBrush}" FontSize="11">
                                        <Run Text="{Binding ElapsedSeconds, Converter={StaticResource TimeSpanConverter}}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Saved Time -->
                                <TextBlock Grid.Row="2"
                                           Text="{Binding LastSaved, StringFormat='Saved: {0:yyyy-MM-dd HH:mm:ss}'}"
                                           Foreground="{StaticResource TextDimBrush}"
                                           FontSize="10"
                                           Margin="0,2,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button x:Name="btnOk" Content="RESUME"
                        Width="120" Height="38"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnOk_Click"
                        IsEnabled="False"/>
                <Button x:Name="btnCancel" Content="CANCEL"
                        Width="100" Height="38"
                        Style="{StaticResource DangerButton}"
                        Click="BtnCancel_Click"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
