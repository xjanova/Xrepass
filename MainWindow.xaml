<Window x:Class="ZipCrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="X-Repass - Archive Password Recovery"
        Height="900" Width="1350"
        Background="{StaticResource PrimaryBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Icon="app.ico">

    <Border CornerRadius="16" Background="{StaticResource PrimaryBrush}" BorderBrush="#2a2a4a" BorderThickness="1">
        <Grid>
            <!-- Background Logo Watermark -->
            <Image Source="logo.png"
                   Width="500" Height="500"
                   Opacity="0.35"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Panel.ZIndex="0"
                   IsHitTestVisible="False"
                   RenderOptions.BitmapScalingMode="HighQuality">
                <Image.Effect>
                    <DropShadowEffect Color="#00f5ff" BlurRadius="80" ShadowDepth="0" Opacity="0.5"/>
                </Image.Effect>
            </Image>

            <!-- Background Firefly Canvas (separate layer for smooth animation) -->
            <Canvas x:Name="fireflyCanvas" Panel.ZIndex="1" IsHitTestVisible="False" ClipToBounds="True"/>

            <!-- Main Content Grid -->
            <Grid Panel.ZIndex="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar - Semi-transparent -->
            <Border Grid.Row="0" CornerRadius="16,16,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <SolidColorBrush Color="#08081a" Opacity="0.9"/>
                </Border.Background>
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <Border Width="24" Height="24" CornerRadius="6" Margin="0,0,10,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#00f5ff" Offset="0"/>
                                    <GradientStop Color="#ff00ff" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="X" FontSize="14" FontWeight="Black" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="X-Repass" Foreground="{StaticResource TextBrush}"
                                   FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text=" - Archive Password Recovery" Foreground="{StaticResource TextDimBrush}"
                                   FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                        <Button x:Name="btnSettings" Width="38" Height="32" Content="âš™ï¸" FontSize="18" Click="BtnSettings_Click" ToolTip="Settings">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2a2a4a"/>
                                                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="btnMinimize" Width="38" Height="32" Content="â”€" FontSize="16" Click="BtnMinimize_Click" ToolTip="Minimize">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2a2a4a"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="btnMaximize" Width="38" Height="32" Content="â˜" FontSize="16" Click="BtnMaximize_Click" ToolTip="Maximize">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2a2a4a"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="btnClose" Width="38" Height="32" Content="âœ•" FontSize="16" Click="BtnClose_Click" ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#cc2244"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Row 1: File Selection - Full Width -->
            <Border Grid.Row="1" Margin="8,4,8,4" CornerRadius="10" Padding="12,10">
                <Border.Background>
                    <SolidColorBrush Color="#06060c" Opacity="0.9"/>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Browse and Resume Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="btnBrowse" Width="130" Height="40"
                                Style="{StaticResource ModernButton}" Click="BtnBrowse_Click" Margin="0,0,8,0" Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‚" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="OPEN" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnResume" Width="130" Height="40"
                                Style="{StaticResource PrimaryButton}" Click="BtnResume_Click" Margin="0,0,12,0" Padding="12,8"
                                Visibility="Collapsed" ToolTip="Resume previous session">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¯" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="RESUME" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnDeleteCheckpoints" Width="40" Height="40"
                                Style="{StaticResource DangerButton}" Click="BtnDeleteCheckpoints_Click" Padding="8"
                                Visibility="Collapsed" ToolTip="Delete all checkpoints">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </StackPanel>

                    <!-- File Path - Takes remaining space -->
                    <TextBox x:Name="txtFilePath" Grid.Column="1" Style="{StaticResource ModernTextBox}"
                             Text="" FontSize="12" Height="38" ToolTip="Supports: ZIP, RAR, RAR5, SFX, EXE" Padding="12,8"/>

                    <!-- Archive Type Badge -->
                    <Border x:Name="archiveTypeBadge" Grid.Column="2" Padding="10,6" CornerRadius="8"
                            Background="#0a1a2a" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1"
                            Visibility="Collapsed" Margin="12,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="lblArchiveIcon" Text="ðŸ“¦" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock x:Name="lblArchiveType" Text="ZIP" Foreground="{StaticResource AccentBrush}"
                                       FontWeight="Bold" FontSize="12" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions - Larger buttons with clear labels -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="12,0,0,0">
                        <Button x:Name="btnTest" Style="{StaticResource ModernButton}"
                                Width="120" Height="38" Click="BtnTest_Click" ToolTip="Test a specific password">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ§ª" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="TEST PASS" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnExtractHash" Style="{StaticResource ModernButton}"
                                Width="50" Height="38" Margin="8,0,0,0" Click="BtnExtractHash_Click" ToolTip="Copy hash to clipboard">
                            <TextBlock Text="ðŸ“‹" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Row 2: Attack Settings + Action Buttons -->
            <Border Grid.Row="2" Margin="8,0,8,4" CornerRadius="10" Padding="14,10">
                <Border.Background>
                    <SolidColorBrush Color="#06060c" Opacity="0.9"/>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Password Length -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ“ PASSWORD LENGTH" Foreground="{StaticResource AccentBrush}" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox x:Name="txtMinLen" Style="{StaticResource ModernTextBox}" Text="1" Width="55" Height="40" TextAlignment="Center" VerticalContentAlignment="Center" TextChanged="PasswordLength_Changed" LostFocus="PasswordLength_LostFocus"/>
                            <TextBlock Text="TO" Foreground="#ffffff" VerticalAlignment="Center" Margin="10,0" FontSize="13" FontWeight="Bold"/>
                            <TextBox x:Name="txtMaxLen" Style="{StaticResource ModernTextBox}" Text="8" Width="55" Height="40" TextAlignment="Center" VerticalContentAlignment="Center" TextChanged="PasswordLength_Changed" LostFocus="PasswordLength_LostFocus"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Charset Options -->
                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ”¤ CHARACTER SET" Foreground="{StaticResource AccentBrush}" FontSize="11" FontWeight="Bold" Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <CheckBox x:Name="chkNumbers" Grid.Row="0" Grid.Column="0" Content="0-9" IsChecked="True" FontSize="11" Margin="0,0,10,2" Checked="Charset_Changed" Unchecked="Charset_Changed"/>
                            <CheckBox x:Name="chkLowercase" Grid.Row="0" Grid.Column="1" Content="a-z" IsChecked="True" FontSize="11" Margin="0,0,0,2" Checked="Charset_Changed" Unchecked="Charset_Changed"/>
                            <CheckBox x:Name="chkUppercase" Grid.Row="1" Grid.Column="0" Content="A-Z" FontSize="11" Margin="0,0,10,0" Checked="Charset_Changed" Unchecked="Charset_Changed"/>
                            <CheckBox x:Name="chkSpecial" Grid.Row="1" Grid.Column="1" Content="!@#$" FontSize="11" Checked="Charset_Changed" Unchecked="Charset_Changed"/>
                        </Grid>
                        <TextBlock x:Name="lblCharsetInfo" Text="36 chars" Foreground="{StaticResource TextDimBrush}" FontSize="9" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Total Passwords Info -->
                    <StackPanel Grid.Column="2" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ“Š TOTAL PASSWORDS" Foreground="{StaticResource AccentBrush}" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="lblTotalPasswords" Text="--" Foreground="#ffaa00" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="lblTotalPasswordsDetail" Text="calculating..." Foreground="{StaticResource TextDimBrush}" FontSize="9"/>
                    </StackPanel>

                    <!-- CPU Threads -->
                    <StackPanel Grid.Column="3" Margin="0,0,20,0">
                        <TextBlock Text="âš¡ CPU THREADS" Foreground="{StaticResource AccentBrush}" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtThreads" Style="{StaticResource ModernTextBox}" Text="12" Width="75" Height="40" TextAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Engine Selection -->
                    <StackPanel Grid.Column="4" Margin="0,0,24,0">
                        <TextBlock Text="ðŸ–¥ï¸ ENGINE" Foreground="{StaticResource AccentBrush}" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Height="22" Margin="0,0,0,4">
                                <CheckBox x:Name="chkCpu" Content="ðŸ’» CPU" IsChecked="True" Margin="0,0,18,0" FontSize="13" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkGpu" Content="ðŸŽ® GPU" Checked="ChkGpu_Checked" Unchecked="ChkGpu_Unchecked" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                            <CheckBox x:Name="chkUtf8" Content="ðŸŒ UTF-8 (à¸ à¸²à¸©à¸²à¹„à¸—à¸¢/à¸­à¸·à¹ˆà¸™à¹†)" FontSize="10" VerticalAlignment="Center"
                                      Checked="ChkUtf8_Checked" Unchecked="ChkUtf8_Unchecked"
                                      ToolTip="à¸£à¸­à¸‡à¸£à¸±à¸šà¸ à¸²à¸©à¸²à¹„à¸—à¸¢à¹à¸¥à¸°à¸ à¸²à¸©à¸²à¸­à¸·à¹ˆà¸™à¹† (à¸Šà¹‰à¸²à¸à¸§à¹ˆà¸²à¸›à¸à¸•à¸´)"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Spacer -->
                    <Border Grid.Column="5"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="6" Orientation="Horizontal">
                        <Button x:Name="btnStart" Style="{StaticResource PrimaryButton}"
                                Width="120" Height="42" FontSize="14" Click="BtnStart_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â–¶" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="START" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnPause" Style="{StaticResource ModernButton}"
                                Width="100" Height="42" FontSize="13" Margin="8,0,0,0" IsEnabled="False" Click="BtnPause_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="txtPauseIcon" Text="â¸" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock x:Name="txtPauseText" Text="PAUSE"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnStop" Style="{StaticResource DangerButton}"
                                Width="100" Height="42" FontSize="13" Margin="8,0,0,0" IsEnabled="False" Click="BtnStop_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¹" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="STOP"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <!-- Hidden elements - moved to Settings window -->
                    <TextBox x:Name="txtHashcatPath" Grid.Column="5" Visibility="Collapsed" Width="0" Height="0"
                             IsReadOnly="True" Background="Transparent" Foreground="Transparent" BorderThickness="0"/>
                    <Button x:Name="btnBrowseHashcat" Grid.Column="5" Visibility="Collapsed" Width="0" Height="0"
                            Background="Transparent" BorderThickness="0" Click="BtnBrowseHashcat_Click"/>
                    <TextBox x:Name="txtPattern" Grid.Column="5" Visibility="Collapsed" Width="0" Height="0" Text="????"/>
                </Grid>
            </Border>

            <!-- Row 3: Monitoring Panel with Graph and Progress Bars -->
            <Border Grid.Row="3" Margin="8,0,8,4" CornerRadius="8" Padding="12,10">
                <Border.Background>
                    <SolidColorBrush Color="#06060c" Opacity="0.9"/>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Progress Bars and Stats -->
                    <Grid Grid.Column="0" Margin="0,0,12,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Progress Section Header -->
                        <TextBlock Grid.Row="0" Text="âš¡ PROGRESS" Foreground="{StaticResource AccentBrush}"
                                   FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>

                        <!-- CPU Progress Bar (Large) -->
                        <Grid Grid.Row="1" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ’»" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock Text="CPU" Foreground="#00ff88" FontSize="11" FontWeight="Bold"/>
                            </StackPanel>

                            <ProgressBar Grid.Column="1" x:Name="progressBarCpuLarge" Height="10" VerticalAlignment="Center" Margin="8,0"
                                     Minimum="0" Maximum="100" Value="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00ff88" Offset="0"/>
                                        <GradientStop Color="#00cc66" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>

                            <TextBlock Grid.Column="2" x:Name="lblProgressCpuLarge" Text="0.0%"
                                       Foreground="#00ff88" FontSize="11" FontWeight="Bold"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- GPU Progress Bar (Large) -->
                        <Grid Grid.Row="2" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸŽ®" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock Text="GPU" Foreground="#ff6b35" FontSize="11" FontWeight="Bold"/>
                            </StackPanel>

                            <ProgressBar Grid.Column="1" x:Name="progressBarGpuLarge" Height="10" VerticalAlignment="Center" Margin="8,0"
                                     Minimum="0" Maximum="100" Value="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#ff6b35" Offset="0"/>
                                        <GradientStop Color="#ff3300" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>

                            <TextBlock Grid.Column="2" x:Name="lblProgressGpuLarge" Text="0.0%"
                                       Foreground="#ff6b35" FontSize="11" FontWeight="Bold"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Overall Progress Bar (Large) -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ“Š" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock Text="ALL" Foreground="{StaticResource AccentBrush}" FontSize="11" FontWeight="Bold"/>
                            </StackPanel>

                            <ProgressBar Grid.Column="1" x:Name="progressBarLarge" Height="12" VerticalAlignment="Center" Margin="8,0"
                                     Minimum="0" Maximum="100" Value="0">
                                <ProgressBar.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonCyan}" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                                </ProgressBar.Effect>
                            </ProgressBar>

                            <TextBlock Grid.Column="2" x:Name="lblProgressLarge" Text="0.0%"
                                       Foreground="{StaticResource AccentBrush}" FontSize="12" FontWeight="Bold"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- File Info Stats (Row 4) -->
                        <Grid Grid.Row="4" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- File Name -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="ðŸ“„ FILE" Foreground="{StaticResource TextDimBrush}" FontSize="8" FontWeight="Bold"/>
                                <TextBlock x:Name="lblFileNameLarge" Text="--" Foreground="{StaticResource TextBrush}"
                                           FontSize="10" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                            </StackPanel>

                            <!-- File Size -->
                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <TextBlock Text="ðŸ’¾ SIZE" Foreground="{StaticResource TextDimBrush}" FontSize="8" FontWeight="Bold"/>
                                <TextBlock x:Name="lblFileSizeLarge" Text="--" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                            </StackPanel>

                            <!-- Hash Type -->
                            <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                <TextBlock Text="ðŸ” TYPE" Foreground="{StaticResource TextDimBrush}" FontSize="8" FontWeight="Bold"/>
                                <TextBlock x:Name="lblHashTypeLarge" Text="--" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                            </StackPanel>

                            <!-- Hashcat Mode -->
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="ðŸŽ® MODE" Foreground="{StaticResource TextDimBrush}" FontSize="8" FontWeight="Bold"/>
                                <TextBlock x:Name="lblHashcatModeLarge" Text="--" Foreground="{StaticResource AccentBrush}" FontSize="10" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>

                        <!-- Hardware Info (Row 5) -->
                        <Grid Grid.Row="5" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- CPU Model -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="ðŸ’» CPU" Foreground="{StaticResource TextDimBrush}" FontSize="8" FontWeight="Bold"/>
                                <TextBlock x:Name="lblCpuModel" Text="--" Foreground="{StaticResource TextBrush}"
                                           FontSize="9" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                            </StackPanel>

                            <!-- GPU Model -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="ðŸŽ® GPU" Foreground="{StaticResource TextDimBrush}" FontSize="8" FontWeight="Bold"/>
                                <TextBlock x:Name="lblGpuModel" Text="--" Foreground="{StaticResource AccentBrush}"
                                           FontSize="9" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Right: Temperature Graph and Stats -->
